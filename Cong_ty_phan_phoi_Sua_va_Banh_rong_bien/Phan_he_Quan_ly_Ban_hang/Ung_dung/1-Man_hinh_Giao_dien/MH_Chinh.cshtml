@using System.Xml;
@{   
    //****************** Xử lý Bảo mật  **********
    var Nhan_vien = (XmlElement)Session["Nhan_vien_Dang_nhap"];
    if (Nhan_vien == null)
    {
        Response.Write("Người dùng chưa Đăng nhập");
        Response.End();
    }
    //****************** Khởi động Dữ liệu Nguồn-Nội bộ **********
    var Du_lieu = XL_LUU_TRU.Doc_Du_lieu();
    var Cua_hang = (XmlElement)Du_lieu.GetElementsByTagName("Cua_hang")[0];
    var Danh_sach_Dien_thoai =(XmlElement) Du_lieu.GetElementsByTagName("Danh_sach_Dien_thoai")[0];
    var Danh_sach_Dien_thoai_Xem = Danh_sach_Dien_thoai;
    var Danh_sach_Nhom_Dien_thoai = (XmlElement)Du_lieu.GetElementsByTagName("Danh_sach_Nhom_Dien_thoai")[0];
    //************ Khai báo Biến ********************
    //####### Chức năng Tra cứu :
    var Chuoi_Tra_cuu = "";// Biến Nhập
    //####### Chức năng Nhập Dien_thoai :
    var Ma_so_Dien_thoai = "";// Biến Nhập
    var Don_gia_Ban = 1;// Biến Nhập

    var Chuoi_HTML_Thong_bao = "";

    //**** Nhập liệu cho Biến Nhập nếu có - Tính Biến kết quả nếu Hợp lệ   *****************
    //####### Chức năng Tra cứu :
    if (Request["Th_Chuoi_Tra_cuu"] != null)
    {
        Chuoi_Tra_cuu = Request["Th_Chuoi_Tra_cuu"];
        Danh_sach_Dien_thoai_Xem = XL_NGHIEP_VU.Tra_cuu_Dien_thoai(Chuoi_Tra_cuu, Danh_sach_Dien_thoai);
        Chuoi_HTML_Thong_bao = "<div class='alert alert-info'>Danh sách " +
                          Danh_sach_Dien_thoai_Xem.ChildNodes.Count + " Dien_thoai " +
                        "</div>";
    }
    //####### Chức năng cập nhật Đơn giá bán Dien_thoai :
    if (Request["Th_Ma_so_Dien_thoai"] != null)
    {
        Ma_so_Dien_thoai = Request["Th_Ma_so_Dien_thoai"];
        Don_gia_Ban = int.Parse(Request["Th_Don_gia_ban"]);
        var Dien_thoai = XL_NGHIEP_VU.Tim_Dien_thoai(Ma_so_Dien_thoai, Du_lieu);
        var Hop_le = Dien_thoai != null;
        if (Hop_le)
        {
            Dien_thoai.SetAttribute("Don_gia_Ban", Don_gia_Ban.ToString());
            var Kq_Ghi = XL_LUU_TRU.Cap_nhat_gia_ban(Dien_thoai);
            // Lưu ý : Chưa xét trường hợp của Kq_Ghi
            Chuoi_HTML_Thong_bao = "<div class='alert alert-success'>Đã cập nhật giá bán " + Dien_thoai.GetAttribute("Ten") + " là "
                                 +  Don_gia_Ban.ToString("n0", XL_THE_HIEN.Dinh_dang_VN) + "</div>";
        }
        else
        {
            Chuoi_HTML_Thong_bao = "<div class='alert alert-warning'>Dữ liệu Nhập không hợp lệ</div>";
        }
    }

    //******************* Kết xuất  **********
    var Chuoi_HTML_Danh_sach_Dien_thoai = XL_THE_HIEN.Tao_Chuoi_HTML_Danh_sach_Dien_thoai(Danh_sach_Dien_thoai_Xem);
    var Chuoi_HTML_Danh_sach_Nhom_Dien_thoai = XL_THE_HIEN.Tao_Chuoi_HTML_Danh_sach_Nhom_Dien_thoai(Danh_sach_Nhom_Dien_thoai);
}
 
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
