@using System.Xml;
@{
    //****************** Khởi động Dữ liệu Nguồn-Nội bộ **********
    var Du_lieu = XL_LUU_TRU.Doc_Du_lieu();
    var Cua_hang = (XmlElement)Du_lieu.GetElementsByTagName("Cua_hang")[0];
    var Danh_sach_Nhan_vien = (XmlElement)Du_lieu.GetElementsByTagName("Danh_sach_Nhan_vien")[0];


    //******************* Khai báo Biến  ********************
    var Ten_Dang_nhap = "";
    var Mat_khau = "";// Biến Nhập liệu
    var Nhan_vien =(XmlElement ) null;  // Biến  Kết quả

    //******************* Nhập liệu cho Biến Nhập nếu có - Tính Biến kết quả nếu Hợp lệ   *****************
    if (Request["Th_Ten_Dang_nhap"] != null) // Xử lý Biến cố
    {
        Ten_Dang_nhap = Request["Th_Ten_Dang_nhap"];
        Mat_khau = Request["Th_Mat_khau"];
        Nhan_vien = XL_NGHIEP_VU.Dang_nhap_Quan_ly_Ban_hang(Ten_Dang_nhap, Mat_khau, Danh_sach_Nhan_vien);

    }

    //******************* Kết xuất  **********
    var Chuoi_HTML_Thong_bao = "";
    if (Ten_Dang_nhap == "") // Người dùng chưa nhập liệu
    {
        Chuoi_HTML_Thong_bao = "<div class='alert alert-info' >Xin vui lòng Nhập Tên đăng nhập và Mật khẩu"
            + "<br />Click Đồng ý=>Nếu hợp lệ Ứng dụng sẽ chào anh/chị" + "</div>";
    }
    else if (Nhan_vien ==null ) // Người dùng đã nhập liệu - Không Hợp lệ
    {
        Chuoi_HTML_Thong_bao = "<div  class='alert alert-danger' >Đăng nhập không hợp lệ"
              + "<br />Xin vui lòng Nhập <b>lại</b> Tên đăng nhập và Mật khẩu" + "</div>";
    }
    else if (Nhan_vien != null) // Người dùng đã nhập liệu - Hợp lệ
    {
        Session["Nhan_vien_Dang_nhap"] = Nhan_vien;
        Response.Redirect("MH_Chinh.cshtml");
    }

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
          integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
<body>
    <form method="post">
        <div class="container-fluid">
            <div>
                <div class="alert" style="height:10px">
                    Đăng nhập
                </div>
                <div class="alert" style="height:30px">
                    <input name="Th_Ten_dang_nhap" required="required"
                           spellcheck="false" autocomplete="off" value="@Ten_Dang_nhap" />
                </div>
                <div class="alert" style="height:30px">
                    <input name="Th_Mat_khau" type="password" required="required"
                           spellcheck="false" autocomplete="off" value="@Mat_khau" />
                </div>
                <div class="alert" style="height:40px">
                    <button class="btn btn-danger" type="submit">Đồng ý</button>
                </div>
            </div>
            @Html.Raw(Chuoi_HTML_Thong_bao)
        </div>
    </form>
</body>
</html>
